{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalPassThroughEnv": [
    "BETTER_AUTH_SECRET",
    "DATABASE_URL",
    "DATABASE_AUTH_TOKEN",
    "RESEND_API_KEY",
    "OPENAPI_API_KEY",
    "BLOB_READ_WRITE_TOKEN",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "KV_REST_API_TOKEN",
    "KV_REST_API_URL",
    "STS_URL",
    "STS_CERTIFICATE",
    "APP_ENV",
    "VERCEL_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**"
      ]
    },
    "web-client#build": {
      "dependsOn": [
        "@repo/database#migrate",
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        "dist/**",
        "!.next/cache/**"
      ]
    },
    "migrate": {
      "cache": true,
      "persistent": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    }
  }
}