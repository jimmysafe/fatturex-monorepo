{
  "name": "@repo/database",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "exports": {
    "./client": {
      "types": "./src/client.ts",
      "default": "./dist/client.js"
    },
    "./schema": {
      "types": "./src/schema/index.ts",
      "default": "./dist/schema/index.js"
    },
    "./lib/*": {
      "types": "./src/lib/*.ts",
      "default": "./dist/lib/*.js"
    },
    "./utils": {
      "types": "./src/utils.ts",
      "default": "./dist/utils.js"
    }
  },
  "scripts": {
    "dev": "concurrently --names WATCHER,TURSO -c cyan,magenta \"tsc --watch\" \"pnpm db:dev\"",
    "build": "tsc",
    "lint": "eslint . --fix",
    "db:dev": "turso dev --db-file dev.db",
    "generate": "drizzle-kit generate",
    "migrate": "drizzle-kit migrate",
    "studio": "drizzle-kit studio",
    "push": "drizzle-kit push"
  },
  "peerDependencies": {
    "@libsql/client": "catalog:",
    "zod": "catalog:"
  },
  "dependencies": {
    "@repo/shared": "workspace:*",
    "drizzle-orm": "catalog:",
    "drizzle-zod": "^0.7.0",
    "uuid": "^11.0.5",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@faker-js/faker": "catalog:",
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "concurrently": "^9.1.2",
    "dotenv": "^16.4.5",
    "drizzle-kit": "^0.30.4",
    "eslint": "catalog:",
    "turso": "^0.1.0",
    "typescript": "catalog:"
  }
}
